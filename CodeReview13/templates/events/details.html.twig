{% extends 'base.html.twig' %}

{% block title %}Details{% endblock %}

{% block body %}

<div class="container">
        <div class="col-sm-10 offset-sm-1 col-md-10 offset-md-1 col-lg-8 offset-lg-2">
            <div class="card mb-4 border-0 my-5" >
                <div class="card-body bg-light rounded-3 bg-light">
                    <img src=" {{ events.image }} " class="card-img-top">
                    <h5 class="card-title text-center"> {{ events.name }} </h5>                   
                    <p class="d-flex justify-content-center"></p>
                    <div class="card-text ms-4 ">
                        <p class="m-0 ">Description: {{ events.description }}</p>
                        <p class="m-0 ">Capacity: {{ events.capacity }}</p>
                        <p class="m-0 ">Email: {{ events.email }}</p>
                        <p class="m-0 ">Phone: {{ events.phone }}</p>
                        <p class="m-0 ">Address: {{ events.address }}</p>
                        <p class="m-0 ">URL: {{ events.url }}</p>
                        <p class="m-0">Date: {{events.dateTime | date('d/m/Y')}}</p>
                        <p class="m-0">Time: {{events.dateTime | date('H:i')}}</p>
                        <p class="m-0 ">Type: {{ events.type }}</p>
                    </div>
                    <div class="d-flex justify-content-center my-3">
                        <a href="/edit/{{ events.id }}"><button class="btn btn-dark mx-2" title="edit">Edit the Event</button></a>
                        <a href="/delete/{{ events.id }}" onclick="return confirm('Confirm to delete')" class="btn btn-dark mx-2">Delete the Event</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
                

